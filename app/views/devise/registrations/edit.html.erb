<div class="container" style="margin-top: 100px; padding-bottom: 100px;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="card mx-auto" style="width: 30rem;">
        <article class="card-body">
            <h4 class="card-title text-center mb-4 mt-1">パスワード変更</h4>
            <hr>
            <p class="text-success text-center"></p>
            <form>
                <div class="form-group">
                    <%= f.label :email, "メールアドレス：example@email.com" %>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                        </div>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
                    </div>
                </div>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for:
                    <%= resource.unconfirmed_email %>
                </div>
                <% end %>
                <div class="form-group">
                    <%= f.label :password, "パスワード：6文字以上(変更しない場合は空欄)" %>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :"確認用パスワード：6文字以上" %>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :current_password, "現在のパスワード：6文字以上" %>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                </div>
                                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.submit "更新", class: "btn btn-primary btn-block" %>
                            </div>
                            <% end %>
                            <p>アカウントを削除しますか？
                                <%= button_to "退会", registration_path(resource_name), data: { confirm: "本当に退会しますか?" }, method: :delete, class: "btn btn-danger" %>
                            </p>
                            <%= link_to "Back", user_path(@user) %>