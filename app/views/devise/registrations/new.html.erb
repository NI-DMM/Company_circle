<div class="container" style="margin-top: 70px; padding-bottom: 100px;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="card mx-auto" style="width: 30rem;">
        <article class="card-body">
            <h4 class="card-title text-center mb-4 mt-1">Sign up</h4>
            <hr>
            <p class="text-success text-center"></p>
            <form>
                <div class="form-group">
                    <%= f.label :name, "ユーザーネーム" %><br />
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <%= f.text_field :name, autofocus: true, class: "name", class: "form-control", placeholder: "User name" %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :email, "メールアドレス：example@email.com" %>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                        </div>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :"パスワード：6文字以上" %>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "******" %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :"確認用パスワード：6文字以上" %>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "******" %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.submit "新規登録", class: "btn btn-primary btn-block" %>
                </div>
                <% end %>
                <p>既に登録済みの方</p>
                <p>
                    <%= link_to "こちら", new_user_session_path %>からログインしてください。</p>
            </form>
        </article>
    </div>
</div>