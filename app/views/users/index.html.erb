                    <td>
                    <%= link_to "フォロワー数：#{user.followers.count}" %>
                    </td>
            		<td>
            		</td>
                    <td>
                    <%= link_to "Show", user_path(user) %>
                    </td>
            	</tr>
            	<% end %>
            </tbody>
        </table>
    </div>
    </div>
</div>