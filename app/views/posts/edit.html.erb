

  <% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラーが発生しました。
    <% @post.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

<div class="container">
  <div class="row">
      <div class="col-md-6 col-md-offset-3">

<h1>投稿編集</h1>

<%= form_for(@post) do |f| %>
<%= f.text_field :title %>
<br>
<%= f.text_area :body %>
<br>
<%= f.submit "保存", class: "btn btn-primary col-xs-12"  %>
<%= link_to "削除", post_path, method: :delete %>
<br>
<% end %>
