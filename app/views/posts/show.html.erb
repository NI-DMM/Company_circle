<div class="container">

<div class="card mx-auto" style="width: 30rem;">
<article class="card-body">
    <h4 class="card-title text-center mb-4 mt-1">投稿詳細</h4>
    <hr>
    <p class="text-success text-center"></p>
    <form>
    <div class="form-group">

<%= link_to user_path(@post.user.id) do %>
<%= attachment_image_tag @post.user, :profile_image, format: "jpeg", fallback: "サラリーマン.jpeg", size: "40x40" %>
<% end %>
<%= @post.user.name %>
</div>
<div class="input-group">
    	<%= @post.title %>
</div>
<div class="input-group">
<%= @post.body %>
</div>
 <div class="card-img-bottom">

<%= attachment_image_tag @post, :image %>
</div>

<%= @post.created_at.strftime('%Y/%m/%d') %>

<% if @post.favorited_by?(current_user) %>
    	<%= link_to post_favorites_path(@post), method: :delete do %>
    	<i class="fas fa-heart"></i>
      	<% end %>
    <% else %>
        <%= link_to post_favorites_path(@post), method: :post do %>
        <i class="far fa-heart"></i>
       	<% end %>
    <% end %>
    <%= @post.favorites.count %>
<div class="input-group">
<%= @post.post_comments.count %>件コメント
</div>
<% @post.post_comments.each do |post_comment| %>
	<%= attachment_image_tag(post_comment.user, :profile_image, format: "jpeg", fallback: "サラリーマン.jpeg", size: "40x40") %>
	<%= post_comment.user.name %>
	<%= post_comment.created_at.strftime('%Y/%m/%d') %>
	<%= post_comment.comment %>
	<% if post_comment.user == current_user %>
		<%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, data: {confirm: "本当に削除しますか？"} %>
	<% end %>
<% end %>

<div class="input-group">
<%= form_for [@post, @post_comment] do |f| %>
	<%= f.text_area :comment, class: "form-control" %>
    <br>
	<%= f.submit "投稿する" %>
</div>
<% end %>

</div>
</div>
</div>
</div>
</div>
