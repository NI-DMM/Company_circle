<% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラーが発生しました。
    <% @post.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
<% end %>

<div class="container" style="padding-bottom: 100px;">
    <div class="row" style="margin-top: 100px">
        <div class="col-md-10 mx-auto">
            <% @posts.each do |post| %>
            <div class="card my-3">
                <div class="card-header">
                    <%= link_to user_path(post.user) do %>
                    <%= attachment_image_tag(post.user, :profile_image, format: 'jpeg', fallback: "サラリーマン.jpeg", size:"50x50", class: "rounded-circle") %>
                    <% end %>
                    <%= post.user.name %>
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        <%= link_to post.title, post_path(post.id) %>
                    </h5>
                    <p class="card-text">
                        <%= post.body %>
                    </p>
                </div>
                <div class="card-img-bottom">
                    <%= attachment_image_tag post, :image, :fill, 100, 100, format: 'jpeg' %>
                </div>
                <div class="card-body">
                    <div class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <% if post.favorited_by?(current_user) %>
                                    <%= link_to post_favorites_path(post), method: :delete do %>
                                    <i class="fas fa-heart"></i>
                                    <% end %>
                                    <% else %>
                                    <%= link_to post_favorites_path(post), method: :post do %>
                                    <i class="far fa-heart"></i>
                                    <% end %>
                                    <% end %>
                                </td>
                                <td>
                                    <%= post.favorites.count %>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %>
                                </td>
                            </tr>
                        </tbody>
                    </div>
                </div>
            </div>
            <% end %>
            <%= paginate @posts %>
        </div>
    </div>
</div>